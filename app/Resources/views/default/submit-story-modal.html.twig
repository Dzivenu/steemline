<div id="submit-story" class="uk-modal">
    <div class="uk-modal-dialog uk-modal-dialog-large">
        <a class="uk-modal-close uk-close"></a>
        <div class="uk-modal-header">
            <h3>Submit a Story</h3>
        </div>
        <form class="uk-form">
            <input type="text" class="uk-form-large uk-width-1-1 uk-margin-bottom" placeholder="Title"/>
            <textarea data-uk-htmleditor="{markdown:true, mode:'tab'}"></textarea>
            <input type="text" class="uk-form-large uk-width-1-1 uk-margin-top" placeholder="Tags"/>
        </form>
        <div class="uk-modal-footer uk-text-right">
            <div class="uk-button-group" style="display: inline-block;">
                <button class="uk-button">
                    <i class="uk-icon-calendar"></i>
                    Date
                </button>
                <button class="uk-button uk-button-primary uk-active">Now!</button>
            </div>
            <a href="#" class="uk-button uk-button-success">
                <i class="uk-icon-check"></i> Publish
            </a>
        </div>
    </div>
</div>